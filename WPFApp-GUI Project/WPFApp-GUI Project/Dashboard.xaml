<Window x:Class="WPFApp_GUI_Project.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp_GUI_Project"
        mc:Ignorable="d"
        Title="Dashboard"
        ResizeMode="CanResizeWithGrip"
        
        Height="720" Width="1080" WindowStartupLocation="CenterScreen" Background="{x:Null}">
    <Border Background="White" CornerRadius="20">
        <Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="borderSideBar" CornerRadius="20">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF2CBA8C"/>
                            <GradientStop Color="#FF7E89C5" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <StackPanel Orientation="Vertical">
                            <Ellipse Width="64" Height="63" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="16,27,0,0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/user4.png"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Label x:Name="lableUsername" Margin="10, 7" HorizontalAlignment="Left" VerticalAlignment="Top"  Content="Username" Width="100" FontSize="18" FontFamily="Segoe UI Variable Small Semibold" Foreground="White"/>
                        </StackPanel>
                        <Button VerticalAlignment="Bottom" Background="{x:Null}" Height="48" BorderBrush="{x:Null}">
                            <StackPanel Orientation="Horizontal" Width="113">
                                <Image Source="exit.png" Width="30" Margin="0,0,10,0"/>
                                <TextBlock Text="Logout" FontSize="17" Width="65" Height="21" FontFamily="Segoe UI Variable Small Semibold"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
            <ScrollViewer Margin="163,0,0,0">
                <WrapPanel >
                    <WrapPanel.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.336"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </WrapPanel.RenderTransform>
                    <Grid Height="200" Width="220">
                        <Image HorizontalAlignment="Center" Height="120" VerticalAlignment="Top" Width="184" Source="/sample.jpg" Margin="0,34,0,0"/>
                        <Button Content="Buy" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="57,147,0,0" Width="94" Height="28"/>
                    </Grid>
                    <Grid Height="200" Width="220">
                        <Image HorizontalAlignment="Center" Height="120" VerticalAlignment="Top" Width="184" Source="/sample.jpg" Margin="0,34,0,0"/>
                        <Button Content="Buy" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="57,147,0,0" Width="94" Height="28"/>
                    </Grid>
                    <Grid Height="200" Width="220">
                        <Image HorizontalAlignment="Center" Height="120" VerticalAlignment="Top" Width="184" Source="/sample.jpg" Margin="0,34,0,0"/>
                        <Button Content="Buy" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="57,147,0,0" Width="94" Height="28"/>
                    </Grid>
                    <Grid Height="200" Width="220">
                        <Image HorizontalAlignment="Center" Height="120" VerticalAlignment="Top" Width="184" Source="/sample.jpg" Margin="0,34,0,0"/>
                        <Button Content="Buy" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="57,147,0,0" Width="94" Height="28"/>
                    </Grid>
                    <Grid Height="200" Width="220">
                        <Image HorizontalAlignment="Center" Height="120" VerticalAlignment="Top" Width="184" Source="/sample.jpg" Margin="0,34,0,0"/>
                        <Button Content="Buy" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="57,147,0,0" Width="94" Height="28"/>
                    </Grid>
                    <Grid Height="200" Width="220">
                        <Image HorizontalAlignment="Center" Height="120" VerticalAlignment="Top" Width="184" Source="/sample.jpg" Margin="0,34,0,0"/>
                        <Button Content="Buy" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="57,147,0,0" Width="94" Height="28"/>
                    </Grid>
                </WrapPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
