<Window x:Class="WPFApp_GUI_Project.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp_GUI_Project"
        mc:Ignorable="d"
        Title="Dashboard" Height="450" Width="800">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.8,1" StartPoint="0.5,0">
                <GradientStop Color="#1BFFFF" Offset="1.9"/>
                <GradientStop Color="#FFCBB6AC" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Image HorizontalAlignment="Left" Height="77" Margin="162,94,0,0" VerticalAlignment="Top" Width="132" Source="/sample.jpg"/>
        <Image HorizontalAlignment="Left" Height="77" Margin="374,94,0,0" VerticalAlignment="Top" Width="132" Source="/sample.jpg"/>
        <Image HorizontalAlignment="Left" Height="77" Margin="589,94,0,0" VerticalAlignment="Top" Width="132" Source="/sample.jpg"/>
        <Image HorizontalAlignment="Left" Height="77" Margin="374,228,0,0" VerticalAlignment="Top" Width="132" Source="/sample.jpg"/>
        <Image HorizontalAlignment="Left" Height="77" Margin="589,228,0,0" VerticalAlignment="Top" Width="132" Source="/sample.jpg"/>
        <Image HorizontalAlignment="Left" Height="77" Margin="162,228,0,0" VerticalAlignment="Top" Width="132" Source="/sample.jpg"/>
        <Button Content="Buy" HorizontalAlignment="Left" Height="22" Margin="184,173,0,0" VerticalAlignment="Top" Width="88"/>
        <Button Content="Buy" HorizontalAlignment="Left" Height="22" Margin="396,173,0,0" VerticalAlignment="Top" Width="88"/>
        <Button Content="Buy" HorizontalAlignment="Left" Height="22" Margin="184,307,0,0" VerticalAlignment="Top" Width="88"/>
        <Button Content="Buy" HorizontalAlignment="Left" Height="22" Margin="611,173,0,0" VerticalAlignment="Top" Width="88"/>
        <Button Content="Buy" HorizontalAlignment="Left" Height="22" Margin="396,307,0,0" VerticalAlignment="Top" Width="88"/>
        <Button Content="Buy" HorizontalAlignment="Left" Height="22" Margin="611,307,0,0" VerticalAlignment="Top" Width="88"/>

        <DockPanel HorizontalAlignment="Left" Height="434" LastChildFill="False" Margin="-2,0,0,0" VerticalAlignment="Center" Width="96" RenderTransformOrigin="0.5,0.5" Background="Black" Opacity="0.5">
            <DockPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </DockPanel.RenderTransform>
        </DockPanel>
    </Grid>
</Window>
